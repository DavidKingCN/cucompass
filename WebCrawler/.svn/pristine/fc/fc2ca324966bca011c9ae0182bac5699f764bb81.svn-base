        function saveUser(){
        	var data_ = $("#fm").serializeForm();
        	alert(data_);
            $('#fm').form('submit',{
                url: url,
                data:data_,
                dataType : 'text',  
        		contentType:'application/json',  
        		async : true,
                onSubmit: function(){
                    return $(this).form('validate');
                },
                success: function(result){
                	alert(result);
                    var result = eval('('+result+')');
                    if (result.errorMsg){
                        $.messager.show({
                            title: 'Error',
                            msg: result.errorMsg
                        });
                    } else {
                        $('#dlg').dialog('close');        // close the dialog
                        $('#dg').datagrid('reload');    // reload the user data
                    }
                }
            });
